{
  "name": "@agentron-studio/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first desktop app for designing and running AI agents.",
  "author": "Julian M. Kleber <julian.m.kleber@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cap-jmk-real/agentron.git"
  },
  "homepage": "https://github.com/cap-jmk-real/agentron#readme",
  "main": "dist/main.js",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "esbuild src/main.ts --bundle --platform=node --external:electron --external:better-sqlite3 --outfile=dist/main.js && esbuild src/preload.ts --bundle --platform=node --outfile=dist/preload.js",
    "prepare-icon": "node scripts/export-icon.cjs",
    "dist": "npm run prepare-icon && electron-builder --publish never",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@agentron-studio/core": "file:../../packages/core"
  },
  "devDependencies": {
    "@electron/rebuild": "latest",
    "electron": "40.2.1",
    "electron-builder": "26.7.0",
    "esbuild": "0.24.0",
    "sharp": "^0.33.5",
    "pngjs": "^7.0.0"
  },
  "build": {
    "appId": "com.agentron.studio",
    "productName": "Agentron Studio",
    "files": [
      "dist/**",
      "package.json"
    ],
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  }
}
