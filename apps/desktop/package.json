{
  "name": "@agentron-studio/desktop",
  "version": "0.1.3",
  "private": true,
  "description": "Local-first desktop app for designing and running AI agents.",
  "author": "Julian M. Kleber <julian.m.kleber@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cap-jmk-real/agentron.git"
  },
  "homepage": "https://github.com/cap-jmk-real/agentron#readme",
  "main": "dist/main.js",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "esbuild src/main.ts --bundle --platform=node --external:electron --external:better-sqlite3 --outfile=dist/main.js && esbuild src/preload.ts --bundle --platform=node --outfile=dist/preload.js",
    "start": "electron .",
    "prepare-icon": "node scripts/export-icon.cjs",
    "clean:release": "node scripts/clean-release.cjs",
    "prepare:standalone": "node scripts/prepare-standalone.cjs",
    "rebuild:standalone-native": "node scripts/rebuild-standalone-native.cjs",
    "dist": "npm run clean:release && npm run prepare-icon && npm run prepare:standalone && npm run rebuild:standalone-native && electron-builder --publish never",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@agentron-studio/core": "file:../../packages/core"
  },
  "devDependencies": {
    "@electron/rebuild": "latest",
    "electron": "40.2.1",
    "electron-builder": "26.7.0",
    "esbuild": "0.24.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.agentron.studio",
    "productName": "Agentron Studio",
    "copyright": "Copyright Â© 2025 Julian M. Kleber",
    "files": [
      "dist/**",
      "package.json"
    ],
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "extraResources": [
        {
          "from": "standalone",
          "to": "app",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "standalone/node_modules",
          "to": "app/node_modules"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "extraResources": [
        {
          "from": "standalone",
          "to": "app",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "standalone/node_modules",
          "to": "app/node_modules"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "extraResources": [
        {
          "from": "standalone",
          "to": "app",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "standalone/node_modules",
          "to": "app/node_modules"
        }
      ]
    }
  }
}
